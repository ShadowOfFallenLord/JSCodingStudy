@model IEnumerable<LessonInfo>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Robot Menu";
}


@Html.ActionLink("- Песочница", "Sandbox", "Lesson", null, new { @class = "btn btn-light" })
<br />
@foreach (LessonInfo info in Model)
{
    string title = $"- Урок {info.Id + 1} - {info.Title}";
    @Html.ActionLink(title, "Lesson", "Lesson", new { id = info.Id }, new { @class = "btn btn-light" })
    <br />
}

<br />
@Html.ActionLink("- Back", "Index", "Home", new { area = "" }, new { @class = "btn btn-light" })
