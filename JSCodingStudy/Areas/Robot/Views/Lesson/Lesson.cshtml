@model LessonData
@{
    ViewBag.Title = Model.Title;
}

@section task {
    @foreach(string s in @Model.Task.Split('\n'))
    {
        @s
        <br />
    }
}

@section help {
    var help_node = help.ParseHelp(help.GetHelp(@Model.APIHelp.Move, @Model.APIHelp.Check, @Model.APIHelp.Draw));
}

@section field_init {
    var pattern = [
        @foreach (string line in Model.Pattern)
        {
            @:'@line',
        }
    ]
    var RobotAPI = RAPI.CreateFullRobotAPIWithPattern(pattern, @Model.StartX, @Model.StartY, html_elements.LogDisplay, 100);
}

@section user_code {
    <script>
        html_elements.TextInput.innerHTML = `@Model.Code`
    </script>
}