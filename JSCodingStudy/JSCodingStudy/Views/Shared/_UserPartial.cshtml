<div class="text-warning">
    Привет,
    @if (User.Identity.IsAuthenticated)
    {
        @User.Identity.Name@:!
        @Html.ActionLink("Выйти", "Logout", "AppUser", new { area = "" }, new { @class = "text-primary" })
    }
    else
    {
        @:Гость!
        @Html.ActionLink("Войти", "Login", "AppUser", new { area = "" }, new { @class = "text-primary" })
        @:или
        @Html.ActionLink("Зарегистрироваться", "Register", "AppUser", new { area = "" }, new { @class = "text-primary" })
    }
</div>
